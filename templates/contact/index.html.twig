{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<h1>Contact us</h1>

    {% for message in app.flashes('success') %}
        
        <div class="toast align-items-center text-bg-success border-0 position-absolute top-0 mt-5 start-50 translate-middle fade show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                {{ message }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        <button type="submit" class="btn btn-success">
            Send
            <i class="bi bi-send-fill ms-1"></i>
        </button>
    {{ form_end(form) }}



    

{% endblock %}

